<%= form_for(@story) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :story_type %><br />
    <%= select_tag("story[story_type]", "<option>--Select a Type--</option>" + options_for_select(@story_types)) %>
  </p>
  <p>
    <%= f.label :current_state %><br />
    <%= select_tag("story[current_state]", "<option>--State of Story--</option>" + options_for_select(@current_states)) %>
  </p>
  <p>
    <%= f.label :requester_id %><br />
    <%= f.collection_select(:requester_id, User.all, :id, :name, :include_blank => "none" ) %>
  </p>
  <p>
    <%= f.label :owner_id %><br />
    <%= f.collection_select :owner_id, User.all, :id, :name, :include_blank => "none"  %>
  </p>
  <p>
    <%= f.label :estimate %><br />
    <%= select_tag("story[estimate]", "<option>--Set an Estimate--</option>" + options_for_select(@estimate_options)) %>
  </p>
  
  <p>
    <%= f.submit "Submit" %>
  </p>
<% end %>
