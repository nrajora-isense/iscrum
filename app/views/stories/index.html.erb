<h1>Listing stories</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Story type</th>
    <th>Current state</th>
    <th>Requested by</th>
    <th>Owner</th>
    <th>Estimate</th>
    <th>Project</th>
    <th>Generated by</th>
  </tr>

<% for story in @stories %>
  <tr>
    <td><%=h story.title %></td>
    <td><%=h truncate(story.description,70) %></td>
    <td><%=h story.story_type %></td>
    <td><%=h story.current_state %></td>
    <td><% unless story.requested_by.blank? %><%=h story.requested_by.name %><% end %></td>
    <td><% unless story.owner.blank? %><%=h story.owner.name %><% end %></td>
    <td><%=h story.estimate %></td>
    <td><% unless story.project.blank? %><%=h story.project.name %><% end %></td>
    <td><% unless story.user.blank? %><%=h story.user.try(:name) %><% end %></td>
    <td><%= link_to 'Show', story %></td>
    <td><%= link_to 'Edit', edit_story_path(story) %></td>
    <td><%= link_to 'Destroy', story, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

